<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Awful Forums Reader"
             BackgroundColor="{AppThemeBinding Dark={StaticResource BackgroundColorDark}, 
                                    Light={StaticResource BackgroundColorLight}}"
             xmlns:fontawesome="clr-namespace:FontAwesome"
             x:Class="Awful.Mobile.Views.ForumListPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" >
            <Label FontSize="Header" Text="{x:Static fontawesome:FontAwesomeIcons.Book}" FontFamily="FontAwesomeSolid" />
            <Label Text="Loading..." VerticalOptions="Center" VerticalTextAlignment="Center" HorizontalOptions="Center" HorizontalTextAlignment="Center"  />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>